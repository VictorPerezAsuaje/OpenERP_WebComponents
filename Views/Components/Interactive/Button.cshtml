    <oe-title fouc="ease" variant="lg">Available types</oe-title>
    <div class="grid grid-cols-3 gap-5 my-8" id="typeButtonSamples">
<oe-button fouc="ease" type="circle"><oe-icon name="fa-solid fa-info p-1"></oe-icon></oe-button>
