@{
    Layout = "_Layout";
    ViewData["Title"] = "Not found";
}

<section class="h-screen m-0 items-center flex flex-col">
    <img src="~/img/404.jpg" class="object-scale-down lg:w-1/3" />
    <article class="flex flex-col items-center px-5 text-center my-auto">
        <h1 class="text-2xl w-full mb-3 lg:mb-10 text-indigo-700">Error 404 - Resource Not Found</h1>
        <p class="w-full">I'm sorry but the resouce you have requested does not exist.</p>
        <a class="bg-teal-500 hover:bg-teal-700 text-white rounded-full px-4 py-2 mt-5" asp-controller="Home" asp-action="Index">RETURN</a>
    </article>    
</section>
